{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
		    "toolchainFile": "${sourceDir}/toolchain.cmake",
            "cacheVariables": {
                "BOARD": "CAVeBoard",
                "LINKER_SCRIPT": "stm32f407zgtx_flash.ld"
            }
        },
        {
            "name": "CAVeBoard_Debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "CAVeBoard_RelWithDebInfo",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "CAVeBoard_Release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "CAVeBoard_MinSizeRel",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "CAVeBoard-Mini_Debug",
            "inherits": "CAVeBoard_Debug",
            "cacheVariables": {
                "BOARD": "CAVeBoard-Mini"
            }
        },
        {
            "name": "CAVeBoard-Mini_RelWithDebInfo",
            "inherits": "CAVeBoard_RelWithDebInfo",
            "cacheVariables": {
                "BOARD": "CAVeBoard-Mini"
            }
        },
        {
            "name": "CAVeBoard-Mini_Release",
            "inherits": "CAVeBoard_Release",
            "cacheVariables": {
                "BOARD": "CAVeBoard-Mini"
            }
        },
        {
            "name": "CAVeBoard-Mini_MinSizeRel",
            "inherits": "CAVeBoard_MinSizeRel",
            "cacheVariables": {
                "BOARD": "CAVeBoard-Mini"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "CAVeBoard_Debug",
            "configurePreset": "CAVeBoard_Debug"
        },
        {
            "name": "CAVeBoard_RelWithDebInfo",
            "configurePreset": "CAVeBoard_RelWithDebInfo"
        },
        {
            "name": "CAVeBoard_Release",
            "configurePreset": "CAVeBoard_Release"
        },
        {
            "name": "CAVeBoard_MinSizeRel",
            "configurePreset": "CAVeBoard_MinSizeRel"
        },
        {
            "name": "CAVeBoard-Mini_Debug",
            "configurePreset": "CAVeBoard-Mini_Debug"
        },
        {
            "name": "CAVeBoard-Mini_RelWithDebInfo",
            "configurePreset": "CAVeBoard-Mini_RelWithDebInfo"
        },
        {
            "name": "CAVeBoard-Mini_Release",
            "configurePreset": "CAVeBoard-Mini_Release"
        },
        {
            "name": "CAVeBoard-Mini_MinSizeRel",
            "configurePreset": "CAVeBoard-Mini_MinSizeRel"
        }
    ]
}